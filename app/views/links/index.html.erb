<p id="notice"><%= notice %></p>

<h1>Listing Links</h1>

<table>
  <% if !@links.nil? %>
    <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th>Comment numer</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
        <% @links.each do |link| %>
          <tr>
            <td><%= link.title %></td>
            <td><%= link.content %></td>
            <td><%= link.category_id %></td>
            <td><%= link_to 'Show', link %></td>
            <% if link.user == current_user %>
              <td><%= link_to 'Edit', edit_link_path(link) %></td>
              <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
    <% else %>
        <h2>Create a new post</h2>
      
    </tbody>
  <% end %>
</table>

<br>
<h3><%= @c_id %></h3>
<%= link_to 'New Link', new_link_path(:category_id =>  @c_id) %>
