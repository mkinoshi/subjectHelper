<p id="notice"><%= notice %></p>

<h2 class="sub_title"><%= @category.name  %></h2><br/>
<div class="link row clearfix">
    <h2>
      <%= @link.title %></br>
      <div class="content-info">
        <small class="subject"><%= @link.content %></small></br>
        <small class="author"> <strong><%= time_ago_in_words(@link.created_at) %></strong> ago</strong> by </small>

      </div>
    </h2>
    <% if @link.user == current_user %>
		<div class="btn-group">
			<%= link_to 'Edit', edit_link_path(@link), class: "btn btn-default" %>
			<%= link_to "Destroy", @link, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-defualt" %>
		</div>
	<% end %>
	</div>
	<hr>

<h3>
  <%= @link.comments.count %>Comments
</h3>
<div id="comments">
	<%= render :partial => @link.comments %>
</div>
<%= simple_form_for [@link, Comment.new] do |f| %>
	<div class="field">
		<%= f.text_area :body, class: "form-control" %>
	</div>
	<br>
	<%= f.submit "Add Comment", class: "btn btn-primary" %>
<% end %>
<%= link_to 'Back', links_path %>
